<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
	<title>KYSS Reference</title>
	<parser>
		<target>docs/parser</target>
		<markers>
			<item>TODO</item>
			<item>FIXME</item>
		</markers>
	</parser>
	<transformer>
		<target>docs/api</target>
	</transformer>
	<files>
		<directory>./</directory>
		<ignore>tests/*</ignore>
		<ignore>node_modules/*</ignore>
	</files>
	<logging>
		<level>warn</level>
		<paths>
			<default>{APP_ROOT}/log/phpdoc-{DATE}.log</default>
			<errors>{APP_ROOT}/log/phpdoc-{DATE}.errors.log</errors>
		</paths>
	</logging>
</phpdoc>